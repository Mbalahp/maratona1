using System.Windows.Forms;

namespace tarefa
{
    partial class FormAbreviador
    {
        private System.ComponentModel.IContainer components = null;
        private Label label1;
        private TextBox txtNome;
        private Button btnAbreviar;
        private Label label2;
        private TextBox txtResultado;

        protected override void Dispose(bool disposing)
        {
            if (disposing && (components != null))
            {
                components.Dispose();
            }
            base.Dispose(disposing);
        }

        private void InitializeComponent()
        {
            components = new System.ComponentModel.Container();
            label1 = new Label();
            txtNome = new TextBox();
            btnAbreviar = new Button();
            label2 = new Label();
            txtResultado = new TextBox();
            SuspendLayout();

            label1.AutoSize = true;
            label1.Location = new Point(12, 15);
            label1.Name = "label1";
            label1.Size = new Size(110, 20);
            label1.Text = "Nome completo:";

            txtNome.Location = new Point(12, 38);
            txtNome.Name = "txtNome";
            txtNome.Size = new Size(560, 27);
            txtNome.Anchor = AnchorStyles.Top | AnchorStyles.Left | AnchorStyles.Right;

            btnAbreviar.Location = new Point(578, 35);
            btnAbreviar.Name = "btnAbreviar";
            btnAbreviar.Size = new Size(95, 30);
            btnAbreviar.Text = "Abreviar";
            btnAbreviar.UseVisualStyleBackColor = true;
            btnAbreviar.Click += btnAbreviar_Click;

            label2.AutoSize = true;
            label2.Location = new Point(12, 80);
            label2.Name = "label2";
            label2.Size = new Size(90, 20);
            label2.Text = "Abreviatura:";

            txtResultado.Location = new Point(12, 103);
            txtResultado.Name = "txtResultado";
            txtResultado.Size = new Size(661, 27);
            txtResultado.ReadOnly = true;
            txtResultado.Anchor = AnchorStyles.Top | AnchorStyles.Left | AnchorStyles.Right;

            AutoScaleMode = AutoScaleMode.Font;
            ClientSize = new Size(685, 150);
            Controls.Add(txtResultado);
            Controls.Add(label2);
            Controls.Add(btnAbreviar);
            Controls.Add(txtNome);
            Controls.Add(label1);
            FormBorderStyle = FormBorderStyle.FixedDialog;
            MaximizeBox = false;
            Name = "FormAbreviador";
            Text = "Abreviador de Nomes";
            ResumeLayout(false);
            PerformLayout();
        }
    }
}
