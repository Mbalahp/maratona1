        #endregion

        private void ButtonCalculate_Click(object sender, EventArgs e)
        {
            var textBoxN = (TextBox)Controls["textBoxN"];
            
            if (int.TryParse(textBoxN.Text, out int n) && n > 0)
            {
                CalculatePrimes(n);
            }
            else
            {
                MessageBox.Show("Please enter a valid positive integer.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
                var textBoxPrimes = (TextBox)Controls["textBoxPrimes"];
                var textBoxDivisions = (TextBox)Controls["textBoxDivisions"];
                textBoxPrimes.Clear();
                textBoxDivisions.Clear();
            }
        }

        private Label labelN;
        private TextBox textBoxN;
        private Button buttonCalculate;
        private Label labelPrimes;
        private TextBox textBoxPrimes;
        private Label labelDivisions;
        private TextBox textBoxDivisions;
    }
