namespace exer17
{
    public partial class Form1 : Form
    {
        private long divisionCount;

        public Form1()
        {
            InitializeComponent();
        }

        private long CountDivisionsForPrime(int number)
        {
            if (number < 2) return 0;
            if (number == 2) return 0;
            if (number % 2 == 0) return 1;

            long divisions = 1;
            int sqrtNumber = (int)Math.Sqrt(number);
            
            for (int i = 3; i <= sqrtNumber; i += 2)
            {
                divisions++;
                if (number % i == 0)
                    return divisions;
            }

            return divisions;
        }

        private bool IsPrime(int number, out long divisions)
        {
            divisions = 0;
            
            if (number < 2)
                return false;
            if (number == 2)
                return true;
            if (number % 2 == 0)
            {
                divisions = 1;
                return false;
            }

            divisions = 1;
            int sqrtNumber = (int)Math.Sqrt(number);
            
            for (int i = 3; i <= sqrtNumber; i += 2)
            {
                divisions++;
                if (number % i == 0)
                    return false;
            }

            return true;
        }

        private void CalculatePrimes(int n)
        {
            divisionCount = 0;
            List<int> primes = new List<int>();

            for (int i = 2; i <= n; i++)
            {
                if (IsPrime(i, out long divisions))
                {
                    primes.Add(i);
                    divisionCount += divisions;
                }
                else
                {
                    divisionCount += divisions;
                }
            }

            DisplayResults(primes);
        }

        private void DisplayResults(List<int> primes)
        {
            var textBoxPrimes = (TextBox)Controls["textBoxPrimes"];
            var textBoxDivisions = (TextBox)Controls["textBoxDivisions"];

            if (primes.Count == 0)
            {
                textBoxPrimes.Text = "No prime numbers found.";
                textBoxDivisions.Text = divisionCount.ToString();
                return;
            }

            var primesText = string.Join(", ", primes);
            textBoxPrimes.Text = primesText;
            textBoxDivisions.Text = divisionCount.ToString();
        }

        private void ButtonCalculate_Click(object sender, EventArgs e)
        {
            var textBoxN = (TextBox)Controls["textBoxN"];
            
            if (int.TryParse(textBoxN.Text, out int n) && n > 0)
            {
                CalculatePrimes(n);
            }
            else
            {
                MessageBox.Show("Please enter a valid positive integer.", "Error", MessageBoxButtons.OK, MessageBoxIcon.Error);
                var textBoxPrimes = (TextBox)Controls["textBoxPrimes"];
                var textBoxDivisions = (TextBox)Controls["textBoxDivisions"];
                textBoxPrimes.Clear();
                textBoxDivisions.Clear();
            }
        }
    }
}
